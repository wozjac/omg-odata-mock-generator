{
  "beautify.language": {

    "js": {
      "type": [
        "javascript",
        "json",
        "jsonc"
      ],
      "filename": [
        ".jshintrc",
        ".jsbeautifyrc"
      ]
    },
    "css": [
      "css",
      "less",
      "scss"
    ],
    "html": [
      "htm",
      "html"
    ]
  },
  "eslint.options": {
    "configFile": "./config/.eslintrc.json"
  },
  "beautify.config": "./config/.jsbeautifyrc"
}